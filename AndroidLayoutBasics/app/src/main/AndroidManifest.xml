<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.mobilestudio.androidlayoutbasics">

    <!--
    -  El archivo manifest sirve para declarar todas las propiedades, pantallas y servicios
     que mi aplicación requiere para su ejecución, tales como lectura gps, lectura de contactos
      uso de datos(internet), etc etc etc
    -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SecondaryActivity">

        </activity>
    </application>

</manifest>