<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.mobilestudio.androidlayoutbasics.MainActivity">
    <!-- MATCH PARENT = ADAPTATE AL CONTENEDOR (TamaÃ±o de la pantalla del telefono)   -->

    <TextView
        android:id="@+id/center_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/main_hello_world_txt" />
    <!-- WRAP CONTENT = ADAPTATE AL CONTENIDO  -->

    <TextView
        android:id="@+id/top_center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/main_hello_world_txt" />
    <!-- WRAP CONTENT = ADAPTATE AL CONTENIDO  -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/main_hello_world_txt" />
    <!-- WRAP CONTENT = ADAPTATE AL CONTENIDO  -->

    <TextView
        android:id="@+id/center_vertical_align_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/main_hello_world_txt" />
    <!-- WRAP CONTENT = ADAPTATE AL CONTENIDO  -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/main_hello_world_txt" />
    <!-- WRAP CONTENT = ADAPTATE AL CONTENIDO  -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/main_hello_world_txt" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="@string/main_hello_world_txt" />

    <TextView
        android:id="@+id/izquierda_centrado_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/main_hello_world_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/izquierda_centrado_vertical"
        android:text="@string/secondary_hello" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_center"
        android:layout_alignLeft="@+id/center_center"
        android:text="@string/secondary_hello" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/center_vertical_align_right"
        android:layout_alignLeft="@id/center_vertical_align_right"
        android:text="@string/secondary_hello" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/top_center_horizontal"
        android:text="@string/secondary_hello" />


</RelativeLayout>
